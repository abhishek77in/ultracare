$(function(){
  $('select#report_doctor_id').select2({
    allowClear: true,
    placeholder: 'Choose a reporting doctor'
  });

  $('#print').click(function(){
    var reportId = $('#report_id').val();
    var w = window.open("/reports/" + reportId + "/print");
    if(isChrome) { w.print(); }
  });

  var editor = CKEDITOR.instances["report_content"];
  var showAlert = true;

  editor.on( 'resize', function() {
    var height = editor.ui.space( 'contents' ).getStyle( 'height' );
    height = parseInt(height);
    if ( showAlert && ( height > 500) ) {
      showAlert = false;
      alert('you might be crossing the first page.');
    } else if ( height < 500 ) {
      showAlert = true;
    }
  } );
});
