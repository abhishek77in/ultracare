%div{style: 'text-align: center;'}
  %h3= "Obstetrics U.S.G. Report".upcase
%table
  %tbody
    %tr
      %td= 'Pregnancy'.upcase
      %td= @reportable.pregnancy
      %td
      %td
    %tr
      %td
      %td
        %table
          %thead
            %tr
              %td CRL
              %td mm
              %td weeks
              %td days
          %tbody
            %tr
              %td BPD
              %td= @reportable.bpd.split(',')[0]
              %td= @reportable.bpd.split(',')[1]
              %td= @reportable.bpd.split(',')[2]
            %tr
              %td FL
              %td= @reportable.fl.split(',')[0]
              %td= @reportable.fl.split(',')[1]
              %td= @reportable.fl.split(',')[2]
            %tr
              %td AC
              %td= @reportable.ac.split(',')[0]
              %td= @reportable.ac.split(',')[1]
              %td= @reportable.ac.split(',')[2]
      %td
      %td
    %tr
      %td= 'Average G.A.'.upcase
      %td= @reportable.average_g_a
      %td= 'Presentation and Lie'.upcase
      %td= @reportable.presentation_and_lie
    %tr
      %td= 'Liquor Volume'.upcase
      %td= @reportable.liquor_volume
      %td= 'Cervix and OS'.upcase
      %td= @reportable.cervix_and_o_s
    %tr
      %td= 'Fetal heart'.upcase
      - if @reportable.fetal_heart.present?
        %td= convert_to_line_break(@reportable.fetal_heart).html_safe
    %tr
      %td= 'Fetal Movements'.upcase
      %td
        %table
          %thead
            %tr
              %td Head
              %td Limbs
              %td Breathing
          %tbody
            %tr
              %td= @reportable.fetal_head_movement
              %td= @reportable.fetal_limbs_movement
              %td= @reportable.fetal_breathing_movement
      %td
      %td
    %tr
      %td= 'Placenta'.upcase
      %td= @reportable.placenta
      %td= 'grade'.upcase
      %td= @reportable.grade
    %tr
      %td= 'E.D.D'.upcase
      %td= @reportable.e_d_d
      %td
      %td
    %tr
      %td= 'E.F.W'.upcase
      %td= @reportable.e_f_w
      %td
      %td
    %tr
      %td= 'remarks'.upcase
      %td= @reportable.remarks
      %td
      %td
    %tr
      %td= 'advise'.upcase
      %td= @reportable.advise
      %td
      %td
