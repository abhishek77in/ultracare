%div.text-center
  %h3= "#{@reportable.class.name.underscore.titleize} U.S.G. Report".upcase
%table.high-padding
  %tbody
    %tr
      %td= 'right lobe'.upcase
      %td= simple_format @reportable.thyroid_right_lobe
    %tr
      %td= 'left lobe'.upcase
      %td= simple_format @reportable.thyroid_left_lobe
    %tr
      %td= 'I.J.V and C.A.'.upcase
      %td= simple_format @reportable.i_j_v_and_c_a
    %tr
      %td= 'isthmus'.upcase
      %td= simple_format @reportable.isthmus
    - if @reportable.other.present?
      %tr
        %td= 'other'.upcase
        %td= simple_format @reportable.other

= render partial: 'shared/pdf/impression_advise'

%hr
