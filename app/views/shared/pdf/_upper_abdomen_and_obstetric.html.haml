%div.text-center
  %h3= "Upper Abdomen U.S.G. Report".upcase
%table{class: @reportable.padding_level}
  %tbody
    - @reportable.printable_fields.each do |field|
      - next if @reportable.attributes[field].blank?
      %tr
        %td= field.humanize.upcase
        - if @reportable.attributes[field].present?
          %td= simple_format @reportable.attributes[field], {}, wrapper_tag: 'span'

= render partial: 'shared/pdf/impression_advise'

%hr

%div.page-break
= render 'shared/pdf/obstetric'
