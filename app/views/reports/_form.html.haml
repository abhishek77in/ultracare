= simple_form_for @report, url: save_reports_path, method: :post, html: { id: 'auto-save-report' } do |f|
  .form-container
    %h2.text-center.padded-top.report-title= @report.title
    %hr
    = render 'patient', f: f
    = render 'switch_templates'
    .right-align#report-save-status
    = render 'amount_collected', f: f
    = render 'body', f: f
    .padded-top
      = f.submit 'Save', name: 'save', class: 'button round'
      = f.submit 'Save as draft', name: 'save_as_draft', class: 'button round'
      = link_to 'Print', '#', 'data-report-id' => @report.id, class: 'printLink disabled button round'
      = link_to 'Cancel', root_path, class: 'cancel-link'