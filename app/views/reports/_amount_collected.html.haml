- if setting.enable_accounting?
  %hr
  .row
    .small-4.columns
      %label{:for => 'report_amount_collected'} Amount collected
      .row.collapse
        .small-1.columns
          %span.prefix Rs.
        .small-5.columns
          = f.input :amount_collected, label: false
        .small-1.columns
    .small-4.columns
      %label{:for => 'report_amount_due'} Amount due
      .row.collapse
        .small-1.columns
          %span.prefix Rs.
        .small-5.columns
          = f.input :amount_due, label: false
        .small-1.columns
    .small-4.columns
      %label{:for => 'report_referrers_discount'} Discount on referrer's behalf
      .row.collapse
        .small-1.columns
          %span.prefix Rs.
        .small-5.columns
          = f.input :referrers_discount, label: false
        .small-1.columns
