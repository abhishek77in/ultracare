%hr
= f.input :content,
  as: :ckeditor,
  label: false,
  input_html: { ckeditor: { height: setting.report_body_height } }
#report-body-height.hide= setting.report_body_height
= f.input :title, as: :hidden
= f.input :id, as: :hidden
= f.input :status, as: :hidden, input_html: { value: Report::Status::DRAFT }
.row.page-extend-alert.hide
  %span.fi-alert
    You might be crossing the first page.
.row
  .small-6.columns
    = f.association :doctor, label_method: :name,  label: 'Reporting doctor'
