= simple_form_for :search, url: reports_path, method: :get do |f|
  .row
    .large-3.columns
      = f.input :patient_name, input_html: { placeholder: 'Enter name or a part of name', value: selected_patient_name }
    .large-4.columns
      = f.input :referrer_id, collection: Referrer.all, selected: selected_referrer_id, label_method: :name, label: 'Referred By Referrer', include_blank: true
    .large-3.columns
      = f.input :date_range, label: 'Date Range', input_html: { id: 'date-range', value: selected_date_range, placeholder: 'Set date range' }
    .large-2.columns
      = f.submit 'Find reports', name: 'find_reports', class: 'button round'
