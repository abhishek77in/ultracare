= simple_form_for :search, url: reports_path, method: :get do |f|
  .row
    .large-3.columns
      = f.input :patient_name, input_html: { placeholder: 'Enter name or a part of name', value: selected_patient_name }
    .large-4.columns
      = f.input :doctor_id, collection: Doctor.all, selected: selected_doctor_id, label_method: :doctor_name, label: 'Referred By Doctor', prompt: 'All Doctors', include_blank: true
    .large-3.columns
      = f.input :date_range, label: 'Date Range', input_html: { id: 'date-range', value: selected_date_range, placeholder: 'Set date range', readonly: true }
    .large-2.columns
      = f.submit 'Find reports', name: 'find_reports', class: 'button round'
