<%= f.fields_for :patient do |patient_fields| %>
  <div class="row">
    <div class="small-6 columns">
      <%=  patient_fields.input :name, label: 'Patient Name' %>
    </div>
    <div class="small-6 columns">
      <%= f.association :doctor, label_method: :doctor_name,  label: 'Refered By Doctor', prompt: 'Choose a Doctor', include_blank: true, input_html: { class: 'chosen-select' }  %>
    </div>
  </div>
  <div class="row">
    <div class="small-6 columns">
      <label for="report_patient_attributes_age">Age</label>
      <div class="row collapse">
        <div class="small-6 columns">
          <%=  patient_fields.input :age, label: false %>
        </div>
        <div class="small-6 columns">
          <span class="postfix">years</span>
        </div>
      </div>
    </div>
    <div class="small-6 columns">
      <% if @report.for_female? %>
        <%= patient_fields.input :sex, include_blank: false, collection: [['Female', 'F']] %>
      <% elsif @report.for_male? %>
        <%= patient_fields.input :sex, include_blank: false, collection: [['Male', 'M']] %>
      <% else %>
        <%= patient_fields.input :sex, include_blank: false, collection: [['Female', 'F'],['Male', 'M']] %>
      <% end %>
    </div>
  </div>
<% end %>
