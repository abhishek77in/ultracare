<br/>
<h2 class="text-center"><%= params[:type].titleize %> Report</h2>
<hr/>
<%= simple_form_for(@report) do |f| %>
  <div class="form-container">
    <%= render 'patient', f: f %>

    <div class="row">
      <div class="small-3 columns">
        <%= f.input :cost, as: :integer, label: 'Total amount collected for USG' %>
      </div>
    </div>

    <%= render params[:type], f: f %>
    <%= hidden_field_tag :type, params[:type] %>
    <%= f.button :submit, class: 'round', 'data-disable-with' => 'submitting..' %>
    <%= link_to 'Cancel', root_path, class: 'cancel-link' %>
  </div>
<% end %>
