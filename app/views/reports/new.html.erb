<br/>
<h2 class="text-center"><%= params[:type].titleize %> Report</h2>
<hr/>
<%= simple_form_for(@report) do |f| %>
  <div class="form-container">
    <%= render 'patient', f: f %>
    <%= render params[:type], f: f %>
    <%= hidden_field_tag :type, params[:type] %>
    <%= f.button :submit %>
    <%= link_to 'Cancel', root_path, class: 'cancel-link' %>
  </div>
<% end %>
