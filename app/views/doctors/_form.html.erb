<%= simple_form_for(@doctor) do |f| %>

  <p><strong>Note:</strong> Please enter carefully you will not be allowed to edit doctor details again.</p>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :degree %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
