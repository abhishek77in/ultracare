= simple_form_for @search_report, url: search_reports_path, method: :get do |f|
  .row
    .large-3.columns
      = f.input :patient_id, label: 'Patient id', input_html: { placeholder: "Enter patient's id" }
    .large-3.columns
      = f.input :patient_name, input_html: { placeholder: 'Enter name or a part of name' }
    .large-3.columns
      = f.input :date_range, input_html: { id: 'date-range', placeholder: 'Set date range' }
    .large-2.columns
  .row
    .large-4.columns
      = f.input :keyword, input_html: { placeholder: 'Enter a keyword' }
    .large-4.columns
      = f.input :referrer_id,
          collection: Referrer.all,
          label_method: :name,
          label: 'Referred by',
          include_blank: true
    .large-4.columns
  .row
    .large-2.columns
      = f.submit 'Search', class: 'button round'
    .large-4.columns
      = link_to 'Clear search', new_search_report_path, class: 'button round secondary'
    .large-6.columns