= simple_form_for :search, url: root_path, method: :get do |f|
  .row
    .small-4.columns
      = f.input :doctor_id, collection: Doctor.all, selected: selected_doctor_id, label_method: :doctor_name, label: 'Refered By Doctor', prompt: 'All Doctors', include_blank: true, input_html: { class: 'chosen-select' }
    .small-3.columns
      = f.input :date_range, label: 'Date Range', input_html: { id: 'date-range', value: selected_date_range }
    .small-2.columns
      = f.button :submit, 'Find reports', class: 'round small'
    .small-3.columns
      = link_to 'Print business report', root_path, class: 'round button small'
