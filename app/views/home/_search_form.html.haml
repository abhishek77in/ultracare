= simple_form_for :search, url: root_path, method: :get do |f|
  .row
    .large-4.columns
      = f.input :doctor_id, collection: Doctor.all, selected: selected_doctor_id, label_method: :doctor_name, label: 'Refered By Doctor', prompt: 'All Doctors', include_blank: true, input_html: { class: 'chosen-select' }
    .large-3.columns
      = f.input :date_range, label: 'Date Range', input_html: { id: 'date-range', value: selected_date_range, placeholder: 'Set date range', readonly: true }
    .large-2.columns
      = f.submit 'Find reports', name: 'find_reports', class: 'button round small'
    .large-3.columns
      = f.submit 'Print business report', name: 'print_business_report', class: 'button round small', id: 'print_business_report'
