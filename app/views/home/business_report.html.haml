%br
= simple_form_for :search, url: print_business_report_path, method: :get do |f|
  .row
    .large-4.columns
      = f.input :doctor_id, collection: Doctor.all, selected: selected_doctor_id, label_method: :doctor_name, label: 'Refered By Doctors (optional)', input_html: {multiple: true, 'data-placeholder' => 'Select Doctors', class: 'chosen-select' }
  .row
    %br
  .row
    .large-4.columns
      = f.input :date_range, label: 'Date Range', input_html: { id: 'business-report-date-range', value: selected_date_range, placeholder: 'Set date range', readonly: true }
  .row
    .large-4.columns
      = f.input :show_summary, as: :boolean, input_html: { checked: selected_show_summary? }
  .row
    .large-4.columns
      = f.submit 'Print Business Report', name: 'find_reports', class: 'button round'
