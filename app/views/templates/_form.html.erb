<%= simple_form_for(@template) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :report_title %>
    <%= f.input :content, as: :ckeditor, :input_html => { :ckeditor => { :height => 500 } } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
