<h1>Listing Templates</h1>

<table>
  <thead>
    <tr>
      <th>Template name</th>
      <th>Report title</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.name %></td>
        <td><%= template.report_title %></td>
        <td><%= link_to 'Edit', edit_template_path(template) %></td>
        <td><%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Template', new_template_path %>
<p>
  Download:
  <%= link_to "CSV", templates_path(format: "csv") %>
</p>